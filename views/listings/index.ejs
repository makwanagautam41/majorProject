<% layout("./layouts/boilerplate.ejs") %>
<div id="filters" class="d-flex flex-wrap justify-content-evenly">
  <div class="filter">
    <div>
      <i class="fa-solid fa-fire"></i>
    </div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-person-booth"></i>
    </div>
    <p>Room</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic Cities</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountain</p>
  </div>
  <div class="filter">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castle</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing Pools</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter">
    <div><i class="fa-regular fa-snowflake"></i></div>
    <p>Arctic</p>
  </div>

  <div class="taxToggle filter">
    <div class="form-check form-switch form-check-reverse">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="taxToggle"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display Total After Taxes</label
      >
    </div>
  </div>
</div>
<div class="my-4">
  <% if (allListings.length === 0) { %>
  <!-- No Listings Found -->
  <p class="alert alert-warning text-center mt-4" role="alert">
    No listings found for "<%= searchQuery %>".
  </p>
  <a href="/listings" class="btn btn-primary">Go Back to Listings</a>
  <% if(noListingsFound) {%>
  <script>
    setTimeout(function () {
      window.location.href = "/listings";
    }, 6000);
  </script>

  <%}%> <% } else { %>
  <!-- Display Listings -->
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% for (let listing of allListings) { %>
    <div class="col">
      <div class="card h-100">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing image"
        />
        <div class="card-body d-flex flex-column">
          <p class="card-text mb-3">
            <strong><%= listing.title %></strong> <br />
            &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") :
            "Price not available" %>/night
            <i style="display: none" class="taxInfo"> &nbsp;+18% GST</i>
          </p>
          <a href="/listings/<%= listing.id %>" class="btn btn-primary mt-auto"
            >View Details</a
          >
        </div>
      </div>
    </div>
    <% } %>
  </div>
  <% } %>
</div>
